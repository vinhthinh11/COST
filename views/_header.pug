header( class="header")
  nav( class="nav nav--tours")
    a( href="/" class="nav__el") All tours
    form( class="nav__search")
      button( class="nav__search-btn")
        svg
          use( xlink:href="/img/icons.svg#icon-search")
      input(type="text" placeholder="Search tours" class="nav__search-input")
  div( class="header__logo")
    img( src="/img/logo-white.png" alt="Natours logo")
  nav( class="nav nav--user")
    a( href="#" class="nav__el") My bookings
    a( href="#" class="nav__el")
      img( src="/img/users/default.jpg" alt="User photo" class="nav__user-img")
      span Jonas
    if !login
      a( class="nav__el nav__el--cta" href='/login') Log in
    if !signup
        a( class="nav__el nav__el--cta" href='/signup') Sign up
  a( class="top-link hide" href="" id="js-top")
    svg( xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 6")
      path(d="M12 6H0l6-6z")