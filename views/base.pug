doctype html
html(lang="en")
  head
    block head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet", href="/css/style.css")
      link(rel="shortcut icon", href="/img/cost_icon.svg", type="image/png")
      title Farmicon | #{title?title:"Welcome to the Farmicon"}
      link(href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700" rel="stylesheet")
      link(rel='stylesheet' href='https://site-assets.fontawesome.com/releases/v6.2.1/css/all.css' crossorigin='anonymous' referrerpolicy='no-referrer')
      script(src="/js/backToTop.js" defer)
      link( rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin="anonymous")
      script( src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin="anonymous" defer)
      script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.0/axios.min.js") 
      script(src="https://js.stripe.com/v3/ " defer)
      script(src="/js/index.js" type="module" defer)
      script( src="/socket.io/socket.io.js" defer)
      -if(!user || user.role == "user")
        script(src="/js/chat_websocket.js" type="module" defer)
      -else
        script(src="/js/chat_admin.js" type="module" defer)
    body
    include _header
      .chat-button--img#chatbox
        img(src="https://vcdn.subiz-cdn.com/file/bubble_08.svg" alt="chat button")
      .container-chat.active
        .grp-info
          -if(user&&user.role=="admin")
            h3.grp-name
              | Chat với người dùng
          -else
            h3.grp-name
              | Chat với Admin
        .chatbox
          
        form#form-chatbox(action='')
          input#input-chatbox(type='text' autocomplete='off')
        .send-ico
          i.fas.fa-paper-plane(style='position:absolute;')
    block content
      h1 this is content holder
    include _footer